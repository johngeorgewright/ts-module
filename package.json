{
  "name": "@johngeorgewright/ts-module",
  "version": "3.1.0",
  "description": "TypeScript library template",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "main": "./dist/common/index.js",
  "module": "./dist/es/index.js",
  "scripts": {
    "build": "yarn clean && tsc && tsc --project tsconfig.common.json",
    "clean": "rimraf dist",
    "prepare": "husky install",
    "start": "concurrently --names es 'yarn tsc --watch --preserveWatchOutput'",
    "test": "yarn ts-node-test test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johngeorgewright/ts-module.git"
  },
  "keywords": [],
  "author": "John Wright <johngeorge.wright@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johngeorgewright/ts-module/issues"
  },
  "homepage": "https://github.com/johngeorgewright/ts-module#readme",
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@commitlint/types": "19.0.3",
    "@semantic-release/commit-analyzer": "13.0.0",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "10.0.7",
    "@semantic-release/release-notes-generator": "14.0.1",
    "@types/node": "20.14.9",
    "@types/semantic-release": "20.0.6",
    "@types/source-map-support": "0.5.10",
    "commitizen": "4.3.0",
    "concurrently": "8.2.2",
    "cz-conventional-changelog": "3.3.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.7",
    "nodemon": "3.1.4",
    "prettier": "3.3.2",
    "renamer": "5.0.1",
    "rimraf": "5.0.7",
    "semantic-release": "24.0.0",
    "source-map-support": "0.5.21",
    "ts-node": "10.9.2",
    "ts-node-test": "0.4.3",
    "typescript": "5.5.2"
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "yarn prettier --ignore-path .gitignore --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "tslib": "2.6.3"
  },
  "packageManager": "yarn@4.3.1"
}
