{
  "name": "@johngeorgewright/ts-module",
  "version": "3.1.0",
  "description": "Compose and react upon redux actions",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/es/index.js",
      "require": "./dist/common/index.cjs"
    }
  },
  "imports": {
    "#test": {
      "import": "./dist/es/test.js",
      "require": "./dist/common/test.cjs"
    }
  },
  "scripts": {
    "build": "yarn clean && tsc && tsc --project tsconfig.common.json && yarn build:covertcommonext",
    "build:covertcommonext": "renamer --force --find '/\\.(j|t)s/' --replace '.c$1s' dist/common/**/*",
    "clean": "rimraf dist",
    "prepare": "husky install",
    "start": "concurrently --names es,common,renamer 'yarn tsc --watch --preserveWatchOutput' 'yarn tsc --watch --preserveWatchOutput --project tsconfig.common.json' \"nodemon --ext js --exec 'yarn build:covertcommonext' --watch dist/common\"",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johngeorgewright/ts-module.git"
  },
  "keywords": [],
  "author": "John Wright <johngeorge.wright@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johngeorgewright/ts-module/issues"
  },
  "homepage": "https://github.com/johngeorgewright/ts-module#readme",
  "devDependencies": {
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "@commitlint/types": "17.4.4",
    "@jest/types": "29.6.3",
    "@semantic-release/commit-analyzer": "10.0.1",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "9.0.4",
    "@semantic-release/release-notes-generator": "11.0.4",
    "@types/jest": "29.5.3",
    "@types/node": "18.17.5",
    "@types/semantic-release": "20.0.1",
    "@types/source-map-support": "0.5.6",
    "commitizen": "4.3.0",
    "concurrently": "8.2.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.3",
    "jest": "29.6.2",
    "lint-staged": "14.0.0",
    "nodemon": "3.0.1",
    "prettier": "2.8.8",
    "renamer": "4.0.0",
    "rimraf": "5.0.1",
    "semantic-release": "21.0.7",
    "source-map-support": "0.5.21",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.1.6"
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "yarn prettier --ignore-path .gitignore --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "tslib": "2.6.1"
  },
  "packageManager": "yarn@3.6.1"
}
