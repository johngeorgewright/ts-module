{
  "name": "@johngeorgewright/ts-module",
  "version": "3.0.1",
  "description": "Compose and react upon redux actions",
  "private": true,
  "main": "dist/ts-module.js",
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "rimraf dist",
    "start": "concurrently --names=build,test --prefix-colors=yellow,blue 'yarn start:build' 'yarn start:test'",
    "start:build": "tsc --watch --preserveWatchOutput",
    "start:test": "jest --watch",
    "test": "jest",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johngeorgewright/ts-module.git"
  },
  "keywords": [],
  "author": "John Wright <johngeorge.wright@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johngeorgewright/ts-module/issues"
  },
  "homepage": "https://github.com/johngeorgewright/ts-module#readme",
  "devDependencies": {
    "@commitlint/cli": "17.6.3",
    "@commitlint/config-conventional": "17.6.3",
    "@commitlint/types": "17.4.4",
    "@jest/types": "29.5.0",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.1.0",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.16",
    "@types/semantic-release": "20.0.1",
    "@types/source-map-support": "0.5.6",
    "commitizen": "4.3.0",
    "concurrently": "7.6.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "rimraf": "4.4.1",
    "semantic-release": "21.0.2",
    "source-map-support": "0.5.21",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "yarn prettier --ignore-path .gitignore --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "tslib": "2.4.1"
  },
  "packageManager": "yarn@3.5.1"
}
